---
// Component imports
import { Layout } from "@globals"
import MeasureMaster from "@img/MeasureMaster.webp";
---

<Layout title="Measure Master">
	<section class="p-6 flex-1 flex flex-col justify-between">
		<!-- Welcome -->
		<div
			class="max-w-xl mx-auto flex flex-col justify-center items-center flex-1 space-y-10"
		>
			<img src={MeasureMaster} alt="Measure Master Logo" class="aspect-square rounded-3xl w-80">
			<div class="space-y-2 text-center">
				<h1 class="text-4xl font-semibold">🪡 Measure Master</h1>
				<p class="italic">
					Stitched to Fit
				</p>
			</div>
			<div>
				<ul class="grid md:grid-cols-2 gap-4">
					<li>
						<a
							href="/signup"
							class="p-6 rounded-2xl border border-gray-500 flex flex-col text-center hover:bg-blue-500 focus:bg-blue-500 hover:text-white duration-300 ease-in-out transition hover:border-blue-500 focus:border-blue-500"
						>
							<span class="text-xl font-medium">🔐 Create An Account</span>
						</a>
					</li>
					<li>
						<a
							href="https://github.com/shaunchander/astro-pwa-starter#-documentation"
							class="p-6 rounded-2xl border border-gray-500 flex flex-col text-center hover:bg-blue-500 focus:bg-blue-500 hover:text-white duration-300 ease-in-out transition hover:border-blue-500 focus:border-blue-500"
						>
							<span class="text-xl font-medium">🗝️ Log In</span>
						</a>
					</li>
				</ul>
			</div>
		</div>

		<!-- Twitter -->
		<div class="flex justify-center">
			<a
				href="https://twitter.com/utsavdeep01"
				target="_blank"
				rel="noopener noreferrer"
				class="relative inline-flex items-center rounded-full bg-gray-100 p-4 transition duration-300 ease-in-out hover:-translate-y-2 focus:-translate-y-2 group hover:text-white focus:text-white"
			>
				<div class="flex items-center space-x-4 relative z-10">
					<span class="text-lg font-bold">Built by Utsav</span>
				</div>
				<div
					class="inline-block rounded-full absolute inset-0 bg-gradient-to-tr from-[#007AFF] to-[#ecf2f6] opacity-0 group-hover:opacity-100 group-focus:opacity-100 duration-500 ease-in-out transition"
				>
				</div>
			</a>
		</div>
	</section>
</Layout>
